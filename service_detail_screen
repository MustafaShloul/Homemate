import 'package:flutter/material.dart';

class ServicesDetailScreen extends StatelessWidget {
  static const screenRoute = '/service-detail';

  const ServicesDetailScreen({super.key});
  @override
  Widget build(BuildContext context) {
    final serviceId = ModalRoute.of(context)?.settings.arguments as String;
    return Scaffold(
      appBar: AppBar(title: Text(serviceId)),
      body: Center(child: Text('$serviceIdهذه صفحة تفاصيل الخدمة')),
    );
  }
}
