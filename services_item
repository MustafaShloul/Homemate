import 'package:flutter/material.dart';
import 'package:homemate/models/service.dart';
import 'category_detail_screen.dart';

class ServicesItem extends StatelessWidget {
  final String id;
  final String title;

  final String phone;

  // final Function removeService;

  final String location;

  const ServicesItem({
    super.key,

    required this.id,
    required this.title,
    required this.phone,
    required this.location,
    // required this.removeService,
  });
  void selectService(BuildContext context) {
    Navigator.of(
      context,
    ).pushNamed(CategoryDetailScreen.screenRoute, arguments: id);
  }

  @override
  Widget build(BuildContext context) {
    //inkwell : بستخدمها عشان يلي بكون داخلها يصير قابل للضغط
    return InkWell(
      onTap: () => selectService(context),
      child: Card(
        shape: RoundedRectangleBorder(borderRadius: BorderRadius.circular(15)),
        // هون بتتحكم بدرجة الظل خلف البطاقة
        elevation: 7,

        // هاي بتتحكم بالمسافة الخارجية للبطاقة
        margin: EdgeInsets.all(10),
        child: Column(
          children: [
            // بتساعدني ارتب الاشياء فوق بعض
            Stack(
              children: [
                ClipRRect(
                  borderRadius: BorderRadius.only(
                    topLeft: Radius.circular(15),
                    topRight: Radius.circular(15),
                  ),
                  // child: Image.asset(
                  //   image,
                  //   height: 250,
                  //   width: double.infinity,
                  //   fit: BoxFit.cover,
                  // ),
                ),
                Container(
                  height: 250,
                  //عشان احدد مكان ال child
                  alignment: Alignment.bottomRight,
                  //بحط مسافات داخلية عشان ابعد النص عن الاطراف
                  padding: EdgeInsets.symmetric(vertical: 10, horizontal: 20),
                  decoration: BoxDecoration(
                    //بتحكم بدرجة شفافية اللون
                    gradient: LinearGradient(
                      begin: Alignment.topCenter,
                      end: Alignment.bottomCenter,
                      colors: [
                        Colors.black.withOpacity(0),
                        Colors.black.withOpacity(0.8),
                      ],
                    ),
                  ),
                  child: Text(
                    title,
                    style: Theme.of(context).textTheme.headlineSmall,
                    overflow: TextOverflow.fade,
                  ),
                ),
              ],
            ),
            Padding(
              padding: const EdgeInsets.all(20.0),
              child: Row(
                children: [
                  Row(
                    children: [
                      Icon(Icons.person, color: Colors.amber),
                      Text(
                        title,
                        style: TextStyle(fontFamily: 'ElMessiri', fontSize: 17),
                      ),

                      SizedBox(width: 3),

                      Icon(Icons.phone, color: Colors.amber),
                      Text(
                        phone,
                        style: TextStyle(fontFamily: 'ElMessiri', fontSize: 17),
                      ),
                      SizedBox(width: 3),
                      Icon(Icons.location_city, color: Colors.amber),
                      Text(
                        location,
                        style: TextStyle(fontFamily: 'ElMessiri', fontSize: 17),
                      ),
                    ],
                  ),
                ],
              ),
            ),
          ],
        ),
      ),
    );
  }
}
