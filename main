import 'package:flutter/material.dart';
import 'package:homemate/auth.dart';
import 'package:homemate/screens/categorie_screen.dart';
import 'package:homemate/login_screen.dart';
import 'package:firebase_core/firebase_core.dart';
import 'package:homemate/screens/category_services_screen.dart';
import './screens/service_detail_screen.dart';
import 'package:homemate/signup_screen.dart';
import 'package:flutter_localizations/flutter_localizations.dart';

//show SignupScreen;

Future<void> main() async {
  WidgetsFlutterBinding.ensureInitialized();
  await Firebase.initializeApp();

  runApp(const MyApp());
}

class MyApp extends StatelessWidget {
  const MyApp({super.key});

  @override
  Widget build(BuildContext context) {
    return MaterialApp(
      localizationsDelegates: [
        GlobalMaterialLocalizations.delegate,
        GlobalWidgetsLocalizations.delegate,
        GlobalCupertinoLocalizations.delegate,
      ],
      supportedLocales: [
        Locale('en', 'EN'), // English
        Locale('ar', 'AR'), // Arabic
      ],
      theme: ThemeData(
        primarySwatch: Colors.blue,
        hintColor: Colors.amber,
        fontFamily: 'ElMessiri',
        textTheme: ThemeData.light().textTheme.copyWith(
          headlineSmall: TextStyle(
            color: Colors.white,
            fontSize: 24,
            fontFamily: 'ElMessiri',
            fontWeight: FontWeight.bold,
          ),
          headlineMedium: TextStyle(
            color: Colors.white,
            fontSize: 26,
            fontFamily: 'ElMessiri',
            fontWeight: FontWeight.bold,
          ),
        ),
      ),

      // home: const Auth(),
      // home: CategorieScreen(),
      routes: {
        '/': (context) => const Auth(),
        'categoriescreen': (context) => const CategorieScreen(),
        'signupscreen': (context) => const SignupScreen(),
        'loginscreen': (context) => const LoginScreen(),
        CategoryServicesScreen.screenRoute:
            (context) => CategoryServicesScreen(),
        ServicesDetailScreen.screenRoute: (context) => ServicesDetailScreen(),
      },
    );
  }
}
