// import 'package:flutter/foundation.dart';
import 'package:flutter/material.dart';
import '../widgets/services_item.dart';
import '../app_data.dart';

class CategoryServicesScreen extends StatelessWidget {
  const CategoryServicesScreen({super.key});
  static const screenRoute = '/category-servicse';


  @override
  Widget build(BuildContext context) {
    final routeArgument =
        ModalRoute.of(context)?.settings.arguments as Map<String, String>;

    final categoryId = routeArgument['id'];
    final categoryTitle = routeArgument['title'];
    final filteredServices =
        Servicse_data.where((service) {
          return service.categories.contains(categoryId);
        }).toList();

    return Scaffold(
      appBar: AppBar(
        title: Text(
          categoryTitle!,
          style: TextStyle(
            fontFamily: 'Amiri',
            fontStyle: FontStyle.normal,
            fontSize: 25,
          ),
        ),
        backgroundColor: Colors.blue,
      ),
      body: ListView.builder(
        itemBuilder: (context, index) {
          return ServicesItem(
            id: filteredServices[index].id,
            title: filteredServices[index].title,
            image: filteredServices[index].image,
            ServiceType: filteredServices[index].serviceType,
            name: filteredServices[index].name,
            phone: filteredServices[index].phone,
          );
        },
        itemCount: filteredServices.length,
      ),
    );
  }
}
